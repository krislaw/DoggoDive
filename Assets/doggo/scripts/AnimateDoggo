var frames : Texture[3];
var framesPerSecond = 5;
 
function Update() {
  if(input.anyKey){
       var index : int = (Time.time * framesPerSecond * 2) % frames.Length;
      renderer.material.mainTexture = frames[index];
      }
  else{
      var index : int = (Time.time * framesPerSecond) % frames.Length;
      renderer.material.mainTexture = frames[index];
  }
    
}
